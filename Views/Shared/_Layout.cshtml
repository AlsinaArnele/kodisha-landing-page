<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - koooo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/koooo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="header">
            <div class="logo">
                <div class="brand">
                    <h2>Kodi</h2>
                </div>
            </div>
            <ul class="nav-links">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Listings" asp-action="Rentlistings">Listings</a>
                </li>
                <li>

            </ul>
            <ul class="nav-links">
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="Login"><button class="log">Login</button></></a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="Registration"><button class="reg">Register</button>  </a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="foot">
        <div class="myFooter">
            <div class="logo_container">
                <div class="logod">
                    <h2>Kodi</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
                <div class="links">
                    <i class='bx bxl-facebook'></i>
                    <i class='bx bxl-instagram'></i>
                    <i class='bx bxl-twitter'></i>
                </div>
            </div>
            <div class="menu">
                <h3>Products</h3>
                <ul>

                    <a href="#">
                    <li>Rentals</li></a>
                    <a href="#">
                    <li>For sale</li></a>

                </ul>
            </div>
            <div class="menu">
                <h3>Policy</h3>
                <ul>
                    <a href="#">
                    <li>Privacy Policy</li></a>
                    <a href="#">
                    <li>Terms and Conditions</li></a>

                </ul>
            </div>

        </div>
        <div class="copy">
            &copy; 2023 - Kodi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
