@{
    ViewData["Title"] = "Login";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login and Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/css/account.css" rel="stylesheet" />
</head>
<body class="bodystyle">
    <div class="container col-lg-4 shadow-lg position-absolute translate-middle start-50 top-50 rounded-5">
        <div class="row justify-content-center align-items-center">
            <div class="col p-5 w-50 text-center">
                <h1> Login </h1>
                <div class="mb-3">
                    <input type="email" class="form-control shadow-none rounded-pill p-3 border-dark " id="email" placeholder="Email">

                </div>
                <div class="mb-3">
                    <input type="password" class="form-control shadow-none rounded-pill p-3 border-dark" id="pass" placeholder="Password">

                </div>
                <div class="mb-3">
                    <button id="loginbtn" class="btn-custom btn-primary shadow-sm rounded-pill p-3 w-100 ">LOGIN</button>
                </div>

                <div class="" icons>
                    <img src="~/images/googleicon.svg" class="img-fluid w-15" />
                    <img src="~/images/appleicon.svg" class="img-fluid w-15" />

                </div>

                <div class="my-2">
                    <p>
                        Don't have an account?Register
                        <a class="link text-dark" asp-area="" asp-controller="Account" asp-action="Registration"> Here </a>
                    </p>
                </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    <script src="~/js/account.js"></script>

</body>
</html>